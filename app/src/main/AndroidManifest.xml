<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.primedesign.taskschedulerwithalarm">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:name="com.primedesign.taskschedulerwithalarm.TaskSchedulerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.primedesign.taskschedulerwithalarm.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.primedesign.taskschedulerwithalarm.AddEditTaskActivity"
            android:parentActivityName="com.primedesign.taskschedulerwithalarm.MainActivity">

        </activity>
        <activity
            android:name="com.primedesign.taskschedulerwithalarm.DeadlinePickerActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@android:style/Theme.Dialog">

        </activity>
        <activity android:name="com.primedesign.taskschedulerwithalarm.MPAndroidChartActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver android:name="com.primedesign.taskschedulerwithalarm.reminders.AlertReceiver"  />
        <receiver android:name="com.primedesign.taskschedulerwithalarm.utils.ActionReceiver"/>
    </application>


</manifest>